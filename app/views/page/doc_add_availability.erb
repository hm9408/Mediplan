<%= form_tag('/page/doc_resp_availability') do %>
    <%= hidden_field_tag :pID_doc , @doc_pid%>
    <div class="span3">&nbsp</div>
    <div class="span9 text-center">
        <h1>Ingresar disponibilidad</h1>
        <br>
        <table class="table table-hover">

          <tr>
            <td><h5>Fecha:</h5></td>
            <td class="text-center">
              <h6><%= date_select('show',:date , :default => Date.today+1, :order => [:day, :month]) %></h6>
            </td>
          </tr>
          <tr>
            <td><h5>Hora Inicial:</h5></td>
            <td class="text-center">
              <%= time_select 'event', :timeI, { :default => Time.now.change(:hour => 8), :simple_time_select => true,
                                                     :minute_interval => 40, :time_separator => '', :start_hour => 8, :end_hour => 16 } %>
            </td>
          </tr>
          <tr>
            <td><h5>Hora Final:</h5></td>
            <td class="text-center">
              <%= time_select 'event', :timeF, { :default => Time.now.change(:hour => 8), :simple_time_select => true,
                                                 :minute_interval => 40, :time_separator => '', :start_hour => 8, :end_hour => 16 } %>
            </td>
          </tr>
        </table>
      <%= button_tag(type: "submit", class: "btn btn-danger", title:"Actualizar su disponibilidad") do %>
          Agregar disponibilidad
      <%end%>
    </div>
<%end%>
    <div class="span2 text-center"><br></div>