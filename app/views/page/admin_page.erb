<div class="container">
  <div class="span3 text-left">
    <% if session[:usuario]=='jce' %>
        <br>
        <br>
        <h1>&nbsp&nbsp&nbspOpciones</h1>
        <br>
        <div id="Ver Consultorios">
          <%= link_to 'Ver Consultorios <i class="icon-list-alt"></i>'.html_safe, "/page/admin_offices", :method => :post, :class=> 'btn span2', :title=>"Ver y agregar consultorios"%>
        </div>
        &nbsp<br>
        &nbsp

        <br>
        <%= link_to 'Generar Citas <i class="icon-white icon-calendar"></i>'.html_safe, "/page/admin_generate", :method => :post, :class=> 'btn btn-primary span2', :title=>"Generar citas de los médicos (inicio de mes)"%>
        &nbsp<br>
        &nbsp

        <br>
        <%= link_to 'Inscribir Médico <i class="icon-white icon-user"></i>'.html_safe, "/page/admin_insDoc", :method => :post, :class=> 'btn btn-success span2', :title=>"Agregar un médico al sistema"%>
        &nbsp<br>
        &nbsp

        <br>
        <%= link_to 'Terminar Mes <i class="icon-white icon-off"></i>'.html_safe, "/page/admin_endMonth", :method => :post, :class=> 'btn btn-danger span2', :title=>"Terminar mes y reiniciar las citas"%>
